

<div class="row">
        <%= render 'users/kyoutu', user: @user, book: @book %>
    <div class="col-xs-9">
        <h1>Books</h1>
        <table class="table table-hover">
            <thead>
            		<tr>
            		  <th></th>
            			<th>Title</th>
            			<th>Opinion</th>
            		</tr>
            </thead>

            <% @user.books.each do |book| %>
            <tr>
                <td><%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no-image-icon.jpg"%>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
          <% end %>




        </table>
    </div>



</div>