<h1>User info</h1>



  <% if @user.errors.any? %>
    <div style="color: red">
      <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3><br>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<%= form_with model:@user, local:true do |f| %>

  <label>Name</label>
  <%= f.text_field :name  %>

  <label>ProfileImage</label>
  <%= f.attachment_field :profile_image %>

  <label>introduction</label>
  <%= f.text_area :introduction, rows:'2' %>

  <%= f.submit "Update User" %>
<% end %>