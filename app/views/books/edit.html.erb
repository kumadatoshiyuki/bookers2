  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <h2>Editing Book</h2>
              <% if @book.errors.any? %>
    <div style="color: red">
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3><br>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
        <%= form_with model:@book, local: true do |f|  %>
        <h4>Title</h4>
        <%= f.text_field :title, class:"col-lg-12" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class:"col-lg-12" %>
        <%= f.submit 'Update Book', class:"btn btn-primary col-lg-12" %>

        <div>
          <%= link_to "Show", book_path(@book) %>
          <span>|</span>
          <%= link_to "Back", books_path() %>
        </div>
      <% end %>
  </div>
</div>