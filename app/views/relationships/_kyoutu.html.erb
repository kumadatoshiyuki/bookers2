                 <% user.each do |user| %>
                <tr>
                    <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no-image-icon.jpg"%></td>
                    <td><%= user.name %></td>
                    <td><%= "フォロー数: #{user.follower.count}" %></td>
