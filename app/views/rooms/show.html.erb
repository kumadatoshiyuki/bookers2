<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", users_path(),class:"edit-link" %>
</div>
<h4 class="rooms-title">気になる同士</h4>
<% @user_rooms.each do |e| %>
  <div class="user-name">
    <strong>
    <%= attachment_image_tag e.user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no-image-icon.jpg"%>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.name %>さん
      </a>
    </strong>
  </div>
<% end %>
<hr>

<div id="rooms_buttons">
  <%= render partial: 'rooms/chatitiran', locals: { chats: @chats} %>
</div>


<div class="posts">
    <%= form_for(@chat, remote: true) do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field",id:"message" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "投稿", class: 'form-submit'%>
    <% end %>
</div>